<%- include('../partials/_header.ejs') %>
    <title>Add new Book</title>
    <link rel="stylesheet" href="/stylesheets/new.css">
    
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1 class="new">Add a new Book</h1>
    <form action="/books" method="POST">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
      <label for="author">Author:</label>
      <input type="text" id="author" name="author" required>
      <label for="category">category</label>
      <input type="text" id="category" name="category" required>
      <label for="publishedYear"> published year</label>
      <input type="date" id="publishedYear" name="publishedYear"  required>
      <label for="price" >price</label>
      <input type="number" id="price" name="price" max="999999999999" min="1" required >
      <label for="description">description</label>
      <textarea name="description" id="description"></textarea>
      <button type="submit">Add Book</button>
    </form>
  </body>
  <footer><%- include('../partials/_footer.ejs') %></footer>
</html>
